<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="post" action="/user/login">
            <fieldset>
                <legend>Tags</legend>
                {{#each tags}}
                    <li>{{this.image}}</li>
                    <li>{{this.title}}</li>
                    <li>{{this.description}}</li>
                {{/each}}
            </fieldset>
        </form>
    </div>
</div>