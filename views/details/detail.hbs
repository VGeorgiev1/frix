<div class="container body-content">
    <div class="row">
            <div class="col-md-6">
                <article>
                    <header>
                        <h2>{{title}}</h2>
                    </header>

                    <p>{{description}}
                    </p>

                    <small class="author">
                        {{tauthor.fullName}}
                    </small>

                    <img src="{{picture}}">
                </article>
            </div>
    </div>
    <div>
        <form method='post'>
            Comment:<br />
            <textarea name='comment' id='comment'></textarea><br />

            <input type='submit' value='Submit' />  
        </form>
    </div>
</div>
