<style type="text/css">
    #map {
        width: 50%;
        height: 400px;
        display: block;
        margin: auto;
        margin-bottom: 15px;;
    }

    .hidden {
        display: none
    }
    #items{
        align:center;
    }
    ul {
        list-style-type: none;
        text-align:center;
    }
    .well{
        border-radius: 5px;
        background-color: #FFF;
        padding:15px;
        box-shadow: 0 0 10px darkgrey;
        margin-bottom: 10px;
    }
    input[type="text"], textarea{
        background-color:#F8F8F8
    }
    a{
        color:black;
    }
</style>

<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" enctype="multipart/form-data" method="post" action="/problem/create">
            <fieldset>
                 <div>
                    <h1 class="text-center">Създай нов проблем</h1>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="problemTitle">Заглавие:</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                </div>

                <div id="map"></div>
                <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCQzD3x6YorMnUkwkxzN4k5Pe0NDEFoce8"></script>
                <script type="text/javascript" src="/javascripts/map.js"></script>

                <div class="form-group hidden">
                    <label class="col-sm-4 control-label" for="lat">lat</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="lat" placeholder="lat" name="lat" required>
                    </div>
                </div>

                <div class="form-group hidden">
                    <label class="col-sm-4 control-label" for="lng">lng</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="lng" placeholder="lng" name="lng" required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="problemContent">Описание:</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="problemContent" rows="5" name="description" style="background-color:#F8F8F8;" required></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="problemContent">Снимка:</label>
                    <div class="col-sm-6">
                        <input class="form-control" id="image" type="file" name="image" style="background-color:#F8F8F8;">
                    </div>
                </div>
                <div>
                    <b style="text-align:center;">Избери категория:</b>
                    <div id="tagList" class="content hideContent" tabindex="100">
                    <ul class="items">
                        {{#each tags}}
                            <li><input title={{this.description}} type="radio" name="tag" value={{this.title}}> {{this.title}}</li>
                        {{/each}}
                    </ul>
                    </div>
                    <div class="show-more">
                        <a style="text-decoration:none;">Покажи още</a>
                    </div>
                    <script src="http://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
                    <script type="text/javascript" src="/javascripts/showlessmore.js"></script>
                </div>
               
                <div style="text-align:center;">
                        <button type="reset" class="btn btn-default">Отмени</button>

                        <button type="submit" class="btn btn-primary">Публикувай</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>