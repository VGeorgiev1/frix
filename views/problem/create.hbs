<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" enctype="multipart/form-data" method="post" action="/problem/create">
            <fieldset>
                <legend>New Article</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="problemTitle">Title</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="title" placeholder="Article Title" name="title" required>
                        <input type="text" class="form-control" id="title" placeholder="Problem Title" name="title" required>
                    </div>
                </div>

                <div id="map"></div>
                <style type="text/css">
                    #map {
                        width: 100%;
                        height: 500px;
                    }

                    .hidden {
                        display: none
                    }
                </style>
                <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCQzD3x6YorMnUkwkxzN4k5Pe0NDEFoce8"></script>
                <script type="text/javascript" src="/javascripts/map.js"></script>

                <div class="form-group hidden">
                    <label class="col-sm-4 control-label" for="lat">lat</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="lat" placeholder="lat" name="lat" required>
                    </div>
                </div>

                <div class="form-group hidden">
                    <label class="col-sm-4 control-label" for="lng">lng</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="lng" placeholder="lng" name="lng" required>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-4 control-label" for="problemContent">Description</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="problemContent" rows="5" name="description" required></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="problemContent">Picture:</label>
                    <div class="col-sm-6">
                        <input class="form-control" id="image" type="file" name="image">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <button type="reset" class="btn btn-default">Cancel</button>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>