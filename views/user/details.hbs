

block content
    .container.body-content
        .row
            .col-md-12
                img.details(src=user.profpic, alt='Image')
                h3 Email: #{user.email}
                h3 Name: #{user.username}
                h3 Articles: #{user.articles.length}
                a.details.btn.btn-default(href='/user/edit') Change settings
                if user.username !== 'admin'
                    a.details.btn.btn-danger(href='/user/delete') Delete account
                else
                    form.form-inline(method='POST', action='/user/delete')
                        .form-group
                            label.sr-only Username:
                            input.form-control(maxlength='30', placeholder='Username', name='delUser', required)
                            button.btn.btn-danger(type='submit') Delete user  |  #{user.role}