<script>
    id = "{{id }}";

</script>
<style>
    #commentBox {
        border-radius: 25px;
        border: 2px solid #6495ED;
        padding: 20px;
        word-wrap: break-word;
    }

    #descBox {
        border-radius: 25px;
        border: 2px solid #6495ED;
        padding: 20px;
        word-wrap: break-word;
        margin-bottom: 20px;
    }

    #imgur {
        max-width: 50%;
    }

    #comment{
        width:92%;
        padding:1%;
        font-size:1.2em;
        border:8px outset #6495ED;
    }
    #comment::-webkit-scrollbar {
        width: 12px;
        height: 12px;
    }
    #comment::-webkit-scrollbar-track {
        box-shadow: inset 0 0 10px #4682B4;
        border-radius: 10px;
    }
    #comment::-webkit-scrollbar-thumb {
        border-radius: 10px;
        background: #6495ED; 
        box-shadow: inset 0 0 6px rgba(0,0,0,0.5); 
    }
    #comment::-webkit-scrollbar-thumb:hover {
        background: #6495ED;
    }
</style>

<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <table width="100%">
                    <tr>
                        <td>
                            <header>
                                <h2 class="text-center">{{title}}</h2>
                            </header>
                        </td>
                        <td align="right">
                            <span id="points">{{points}}</span>
                            <button id="upvote">▲</button>
                            <button id="downvote">▼</button>
                        </td>
                    </tr>
                </table>

                <div id="descBox">
                    <div class="row">
                        <img class="col-sm-1" alt="profile pic" height="70" width="80">
                        <p class="col-sm-3" style="font-size:0.8em"><b style="font-size:1.8em">{{fullName}}name</b><br>{{date}}</p>
                    </div>
                    <p>Description:</p>
                    <p>{{description}}</p>

                    <img src="/{{picture}}" id="imgur">
                </div>
            </article>
        </div>

    </div>
    {{#if user}}
    <div style="margin-bottom:50px;">
        <form method='post'>
            Comment:<br />
            <textarea class="col-l-12" name='comment' id='comment'></textarea><br />

            <input type='submit' value='Submit' />
        </form>
    </div>
    {{/if}} {{#each comments}}
    <div class="row" style="margin-top:5px;">
        <img class="col-sm-1" alt="profile pic" height="70" width="80">
        <div class="col-sm-11">
            <blockquote class="col-sm-11" id="commentBox">
                <b>{{author.fullName}}asd</b>
                <p></p>
                {{this.text}}
            </blockquote>
        </div>
    </div>
    {{/each}}
</div>
<script src="/javascripts/voting.js">

</script>