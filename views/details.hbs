<style>
    #commentBox{
        border-radius: 25px;
        border: 2px solid #73AD21;
        padding: 20px; 
    }

</style>

<div class="container body-content">
    <div class="row">
        <div class="col-md-6">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>{{description}}</p>

                <small class="author">
                        {{author.fullName}}
                    </small>

                <img src="/{{picture}}">
            </article>
        </div>
        
    </div>
    {{#if user}}
    <div>
        <form method='post'>
            Comment:<br />
            <textarea name='comment' id='comment'></textarea><br />

            <input type='submit' value='Submit' />
        </form>
    </div>
    {{/if}}
    {{#each comments}}
        <div class="row" style="margin-top:5px;">
            <img class="col-sm-1" alt="profile pic">
            <blockquote class="col-sm-11" id="commentBox"> {{this.text}}</blockquote>
        </div>
    {{/each}}
</div>