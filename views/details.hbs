<script>
    id = "{{id }}";

</script>
<style>
    #commentBox {
        border-radius: 25px;
        border: 2px solid #73AD21;
        padding: 20px;
        word-wrap: break-word;
    }

    #descBox {
        border-radius: 25px;
        border: 2px solid #53AC31;
        padding: 20px;
        word-wrap: break-word;
    }

    #imgur {
        max-width: 50%;
    }
</style>

<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <table width="100%">
                    <tr>
                        <td>
                            <header>
                                <h2>{{title}}</h2>
                            </header>
                        </td>
                        <td align="right">
                            Points: <span id="points">{{points}}</span>
                            <button id="upvote">^GORe^</button>
                            <button id="downvote">vDolU!v</button>
                        </td>
                    </tr>
                </table>


                <p>{{description}}</p>

                <img src="/{{picture}}">
            </article>
        </div>

    </div>
    {{#if user}}
    <div style="margin-bottom:50px;">
        <form method='post'>
            Comment:<br />
            <textarea name='comment' id='comment'></textarea><br />

            <input type='submit' value='Submit' />
        </form>
    </div>
    {{/if}} {{#each comments}}
    <div class="row" style="margin-top:5px;">
        <img class="col-sm-1" alt="profile pic" height="70" width="80">
        <div class="col-sm-11">
            <blockquote class="col-sm-11" id="commentBox">
                <b>{{author.fullName}}asd</b>
                <p></p>
                {{this.text}}
            </blockquote>
        </div>
    </div>
    {{/each}}
</div>
<script src="/javascripts/voting.js">

</script>